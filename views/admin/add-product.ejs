<%- include('../includes/head.ejs') %>
    
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md space-y-8">
      <div>
        <img class="mx-auto h-12 w-auto" src="https://cdn.dribbble.com/users/230124/screenshots/15645740/media/5712571f79a059e26b5e4dd286598452.jpg?compress=1&resize=1000x750&vertical=top" alt="Your Company">
        <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Add Product to shop</h2>
        
      </div>

      <form class="mt-8 space-y-6" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">

        <div class="-space-y-px rounded-md shadow-sm">

          <div  class="pb-1">
            <label for="title" class="pl-[2px] text-sm font-medium">Product title</label>
            <input id="title" name="title" type="text" required value="<% if (editing) { %><%= product.title %><% } %>" class="relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" placeholder="my product">
          </div>

          <div class="pt-5 pb-1">
            <label for="price" class="pl-[2px] text-sm font-medium">Price</label>
            <input id="price" name="price" type="number" required value="<% if (editing) { %><%= product.price %><% } %>" class="relative block w-full appearance-none rounded-none rounded-b-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" placeholder="12.99">
          </div>

          <div class="pt-5 pb-1">
            <label for="description"  class="pl-[2px] text-sm font-medium">Description</label>
            <textarea id="description" name="description" rows="5" required class="relative block w-full appearance-none rounded-none rounded-b-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" placeholder="my product is good"><% if (editing) { %><%= product.description %><% } %></textarea>
          </div>

          <div class="pt-5 pb-1">
            <label for="imageUrl" class="pl-[2px] text-sm font-medium">imageURL</label>
            <input id="imageUrl" name="imageUrl" type="text" required value="<% if (editing) { %><%= product.imageUrl %><% } %>" class="relative block w-full appearance-none rounded-none rounded-b-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" placeholder="photos.com/abc">
          </div>
        </div>

        <% if (editing) { %>
            <input type="hidden" value="<%= product._id %>" name="productId">
        <% } %>
  
        <div>
          <button type="submit" class="group relative flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
            <% if (editing) { %>Update Product <% } else { %>Add Product <% } %>
          </button>
        </div>
      </form>
    </div>
  </div>

  <%- include('../includes/end.ejs') %>