<%- include('../includes/head.ejs') %>
    
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <main class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
    <% if (prods.length > 0) { %>
      <div class="bg-white border border-gray-300 rounded-md my-3">
        <div class="mx-auto max-w-2xl py-16 px-4 sm:py-24 sm:px-8 lg:max-w-7xl lg:px-8">
          <h2 class="text-2xl font-bold tracking-tight text-gray-900">Shop</h2>
  
          <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
            <% for (let product of prods) { %>
              <div class="group relative">
                <div class="min-h-80 aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-md bg-gray-200 group-hover:opacity-75 lg:aspect-none lg:h-80">
                  <img
                    src="<%= product.imageUrl %>"
                    alt="<%= product.imageUrl %>"
                    class="h-full w-full object-cover object-center lg:h-full lg:w-full"
                  />
                </div>
                <div class="mt-4 flex justify-between">
                  <div>
                    <h3 class="text-sm text-gray-700">
                      <a href="/products/<%= product._id %>">
                        <span aria-hidden="true" class="absolute inset-0"></span>
                        <%= product.title %>
                      </a>
                    </h3>
                   
                  </div>
                  <p class="text-sm font-medium text-gray-900">$<%= product.price %></p>
                </div>
                <div class="mt-4 flex justify-between">
                    <a href="/admin/edit-product/<%= product._id %>?edit=true">
                        <button class="group relative flex w-[90%] justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                            Edit 
                          </button>
                    </a>
                    <form action="/admin/delete-product" method="POST">
                        <input type="hidden" value="<%= product._id %>" name="productId">
                        <button type="submit" class="group relative flex w-[90%] justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                        Delete 
                      </button>
                    </form>
                      
                </div>
              </div>
              <% } %>
          </div>
        </div>
      </div>
    <% } else { %>
        <h1>No Products Found!</h1>
    <% } %>
</main>

<%- include('../includes/end.ejs') %>